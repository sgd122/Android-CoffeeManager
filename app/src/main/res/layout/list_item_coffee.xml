<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:background="@color/background_main_white">

    <ImageView
        android:id="@+id/list_item_coffee_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/app_icon"/>

    <TextView
        android:id="@+id/list_item_coffee_franchise_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:text="이디야"
        android:textColor="@color/color_text_brownish_grey"
        android:textSize="12sp"
        android:fontFamily="@font/spoqa_hansans"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/list_item_coffee_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Iced 토피넛라떼"
        android:textSize="16sp"
        android:textColor="@color/color_text_greyish_brown"
        android:fontFamily="@font/spoqa_hansans"
        android:includeFontPadding="false"/>

</LinearLayout>