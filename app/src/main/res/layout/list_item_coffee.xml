<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:background="@color/background_main_white"
    android:clipToPadding="false"
    android:clipChildren="false">
    
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="6dp"
        app:cardBackgroundColor="@color/background_white_2"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/list_item_coffee_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/coffee_sample" />

        <TextView
            android:id="@+id/list_item_coffee_caffeine_content"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:background="@drawable/background_radius_10dp_brown_grey_caffeine_content"
            android:text="0mg"
            android:textSize="12sp"
            android:textColor="@color/color_text_white"
            android:fontFamily="@font/spoqa_han_sans_bold"
            android:gravity="center_horizontal" />
        
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/list_item_coffee_franchise_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="이디야"
        android:textColor="@color/color_text_brownish_grey"
        android:textSize="12sp"
        android:fontFamily="@font/spoqa_han_sans_bold"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/list_item_coffee_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메뉴이름메뉴이름메뉴이름메뉴이름메뉴이름"
        android:textSize="14sp"
        android:textColor="@color/color_text_grayish_brown"
        android:fontFamily="@font/spoqa_han_sans_bold"
        android:includeFontPadding="false"/>

</LinearLayout>