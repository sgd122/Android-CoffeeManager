<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginBottom="26dp">

    <TextView
        android:id="@+id/list_item_history_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="Iced 아메리카노"
        android:textSize="14sp"
        android:textColor="@color/color_text_greyish_brown"
        android:lines="1"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/spoqa_han_sans_bold"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/list_item_history_franchise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="스타벅스"
        android:textSize="14sp"
        android:textColor="@color/color_text_brownish_grey"
        android:lines="1"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/spoqa_han_sans_bold"
        android:includeFontPadding="false"/>

    <TextView
        android:id="@+id/list_item_history_caffeine_intake"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|end"
        android:text="126mg"
        android:textSize="14sp"
        android:textColor="@color/color_text_greyish_brown"
        android:lines="1"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/spoqa_han_sans_bold"
        android:includeFontPadding="false"/>
</LinearLayout>