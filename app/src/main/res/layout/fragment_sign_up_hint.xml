    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_sign_up_hint_constraint_parent_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_sign_up_hint_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="24dp"
            android:text="@string/activity_sign_up_password_hint"
            android:textColor="@color/color_text_grayish_brown"
            android:textSize="18sp"
            android:fontFamily="@font/spoqa_han_sans_bold"
            android:includeFontPadding="false"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

